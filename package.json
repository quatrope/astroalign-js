{
  "name": "astroalign",
  "version": "0.1.0",
  "description": "A Javascript library for aligning images using the Astroalign algorithm.",
  "author": "Martin Beroiz",
  "license": "MIT",
  "type": "module",
  "main": "./dist/astroalign.js",
  "exports": {
    ".": {
      "import": "./dist/astroalign.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "clean": "rm -rf node_modules dist",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ndarray-warp": "^0.1.1",
    "nudged": "^2.1.1",
    "static-kdtree": "^1.0.2"
  }
}
